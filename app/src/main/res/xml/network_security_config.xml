<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Debug config - allow cleartext for local development -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>

    <!-- Allow cleartext for local development server (Android emulator and local network) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">10.0.2.2</domain>
        <domain includeSubdomains="false">localhost</domain>
        <!-- Local network development servers -->
        <domain includeSubdomains="false">192.168.31.113</domain>
        <domain includeSubdomains="false">192.168.0.102</domain>
    </domain-config>

    <!-- Base config - HTTPS only -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- API domain with certificate pinning (CA-level, survives leaf cert rotation) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">kotkit.pro</domain>
        <domain includeSubdomains="true">kotkit-app.fly.dev</domain>
        <pin-set expiration="2030-01-01">
            <!-- ISRG Root X1 (Let's Encrypt root, valid until 2035) -->
            <pin digest="SHA-256">C5+lpZ7tcVwmwQIMcRtPbsQtWLABXhQzejna0wHFr8M=</pin>
            <!-- Let's Encrypt E7 intermediate (current active) -->
            <pin digest="SHA-256">y7xVm0TVJNahMr2sZydE2jQH8SquXV9yLF9seROHHHU=</pin>
        </pin-set>
    </domain-config>
</network-security-config>
